<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ManagerPage.CategoryManagerController">

    <children>
        <TableView fx:id="categoryTable" layoutX="74.0" layoutY="121.0" prefHeight="525.0" prefWidth="434.0" stylesheets="@tableview-style.css">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="224.0" text="Category name" />
                <TableColumn fx:id="parentCategory" prefWidth="204.0" text="Parent Category" />
            </columns>
        </TableView>
        <Text fx:id="welcomeText" fill="#ddab21" layoutX="90.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Category manager">
            <font>
                <Font name="Freestyle Script" size="43.0" />
            </font>
        </Text>
        <Button id="removeButton" fx:id="removeCategory" layoutX="548.0" layoutY="137.0" mnemonicParsing="false" onAction="#remove" prefHeight="70.0" prefWidth="70.0" stylesheets="@information-page-style.css" />
        <Button id="addButton" fx:id="addCategory" layoutX="542.0" layoutY="327.0" mnemonicParsing="false" onAction="#addCategory" prefHeight="70.0" prefWidth="70.0" stylesheets="@information-page-style.css" />
        <Button id="editButton" fx:id="editCategory" layoutX="542.0" layoutY="232.0" mnemonicParsing="false" onAction="#editCategory" prefHeight="70.0" prefWidth="70.0" stylesheets="@information-page-style.css" />
    </children>


</AnchorPane>
