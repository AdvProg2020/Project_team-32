      </ImageView>
      <Text fill="#ddab21" layoutX="335.0" layoutY="132.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign up">
         <font>
            <Font name="Freestyle Script" size="75.0" />
         </font></Text>
      <Text layoutX="344.0" layoutY="191.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Glad to see you :)">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Text>
      <TextField fx:id="usernameField" layoutX="405.0" layoutY="268.0" promptText="Username" styleClass="inputText" stylesheets="@registerPageStyle.css" />
